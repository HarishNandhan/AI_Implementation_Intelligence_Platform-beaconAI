# BeaconAI Environment Configuration Template
# Copy this file to .env and fill in your actual values

# LLM Configuration
HF_TOKEN=hf_your_hugging_face_token_here
LLM_PROVIDER=fireworks-ai
LLM_MODEL=meta-llama/Llama-4-Maverick-17B-128E-Instruct

# Email Configuration (Mailgun)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_domain.com
MAILGUN_BASE_URL=https://api.mailgun.net/v3
SENDER_EMAIL=reports@your_domain.com
SENDER_NAME=Your Name - BeaconAI Team

# Backend URL (for frontend to connect to backend)
BACKEND_URL=http://backend:8000

# Docker environment flag
DOCKER_ENV=true

# Optional: SendGrid (alternative email service)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here