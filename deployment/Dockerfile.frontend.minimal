# Ultra-minimal Streamlit frontend
FROM python:3.9-slim

WORKDIR /app

# Install only Streamlit and requests
RUN pip install --no-cache-dir streamlit==1.28.0 requests==2.31.0 python-dotenv==1.0.0

# Copy only essential files
COPY app.py .
COPY care/ ./care/

# Expose port
EXPOSE 8080

# Run Streamlit
CMD ["streamlit", "run", "app.py", "--server.port", "8080", "--server.address", "0.0.0.0", "--server.headless", "true"]